// ---------------------------
// 配置数据库源
// 数据库连接地址获取
// 如果是 postgresql 所涵盖的 权限
// ---------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth", "docs", "collections"]
}

// ---------------------------
// Prisma Client 生成器
// ---------------------------
generator client {
  provider = "prisma-client"
  engineType = "client"
}

// =====================================================
// 分组 1：用户与权限（auth）
// =====================================================

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("auth")
}
